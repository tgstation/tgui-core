    "@storybook/addon-docs": "^9.0.17",
    "@types/bun": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "storybook": "^9.0.17",
    "storybook-addon-sass-postcss": "^0.3.2",
