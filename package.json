{
  "author": "jlsnow301",
  "dependencies": {
    "@floating-ui/react": "^0.27.13",
    "@nozbe/microfuzz": "^1.0.0"
  },
  "description": "TGUI core component library",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@rsbuild/core": "^1.4.7",
    "@rsbuild/plugin-react": "^1.3.4",
    "@rsbuild/plugin-sass": "^1.3.3",
