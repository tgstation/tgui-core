{
  "author": "jlsnow301",
  "dependencies": {
    "@floating-ui/react": "^0.27.8",
    "@nozbe/microfuzz": "^1.0.0"
  },
  "description": "TGUI core component library",
  "devDependencies": {
    "@biomejs/biome": "^2.0.0-beta.5",
    "@rsbuild/core": "^1.3.20",
    "@rsbuild/plugin-react": "^1.3.1",
    "@rsbuild/plugin-sass": "^1.3.1",
    "@rslib/core": "^0.7.1",
    "@storybook/addon-docs": "^9.0.6",
    "@types/bun": "^1.2.13",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "prettier": "^3.5.3",
    "sass": "^1.89.0",
    "storybook": "^9.0.6",
    "storybook-addon-sass-postcss": "^0.3.2",
    "storybook-react-rsbuild": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    "./*": {
      "import": "./dist/common/*.js",
      "require": "./dist/common/*.cjs"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./styles": {
      "sass": "./styles/main.scss",
      "default": "./styles/main.scss"
    },
    "./styles/components/*": {
      "sass": "./styles/components/*"
    }
  },
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [
    "TGUI",
    "library",
    "typescript"
  ],
  "license": "MIT",
  "name": "tgui-core",
  "packageManager": "bun@1.2.13",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tgstation/tgui-core.git"
  },
  "scripts": {
    "build-rslib": "rslib build",
    "build-storybook": "storybook build",
    "lint": "biome check lib",
    "lint:fix": "prettier . --write && biome check . --fix",
    "storybook": "storybook dev -p 6006",
    "test": "bun test"
  },
  "type": "module",
  "version": "4.0.3"
}
