{
  "author": "jlsnow301",
  "dependencies": {
    "@floating-ui/react": "^0.27.8"
  },
  "description": "TGUI core component library",
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.2",
    "@rsbuild/core": "^1.3.18",
    "@rsbuild/plugin-react": "^1.3.1",
    "@rsbuild/plugin-sass": "^1.3.1",
    "@rslib/core": "^0.6.9",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "prettier": "^3.5.3",
    "sass": "^1.81.0",
    "storybook": "^8.6.12",
    "storybook-addon-sass-postcss": "^0.3.2",
    "storybook-react-rsbuild": "^1.0.1",
    "typescript": "^5.8.3"
  },
  "exports": {
    "./*": {
      "import": "./dist/common/*.js",
      "require": "./dist/common/*.cjs"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./styles": {
      "default": "./styles/main.scss",
      "sass": "./styles/main.scss"
    },
    "./styles/components/*": {
      "sass": "./styles/components/*"
    }
  },
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [
    "TGUI",
    "library",
    "typescript"
  ],
  "license": "MIT",
  "name": "tgui-core",
  "packageManager": "pnpm@10.10.0",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tgstation/tgui-core.git"
  },
  "scripts": {
    "build": "rslib build",
    "build-storybook": "storybook build",
    "lint": "biome check lib",
    "lint:fix": "prettier . --write && biome check . --fix",
    "storybook": "storybook dev -p 6006",
    "test": "node --experimental-strip-types --experimental-test-coverage --test ./tests/*.test.ts"
  },
  "type": "module",
  "version": "3.1.5"
}
