{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ScriptHost"],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "tgui-core/*": ["dist/common/*.d.ts"],
      "tgui-core/components/*": ["dist/components/*.d.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* Linting */
    "strict": false,
    "strictNullChecks": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "include": ["lib", "global.d.ts", "stories", ".storybook"]
}
